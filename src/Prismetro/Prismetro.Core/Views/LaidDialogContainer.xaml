<views:DialogContainerBase
    x:Class="Prismetro.Core.Views.Custom.LaidDialogContainer"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:views="clr-namespace:Prismetro.Core.Views"
    d:DesignHeight="50"
    d:DesignWidth="50"
    mc:Ignorable="d">
    <Grid>
        <!--  Main  -->
        <StackPanel>

            <!--  Top  -->
            <StackPanel>
                <ContentPresenter x:Name="HeaderPresenter" />
            </StackPanel>

            <!--  Body  -->
            <StackPanel Margin="0,15">
                <ContentPresenter x:Name="BodyPresenter" />
            </StackPanel>

            <!--  Bottom  -->
            <StackPanel>
                <ContentPresenter x:Name="BottomPresenter" />
            </StackPanel>
        </StackPanel>
    </Grid>
</views:DialogContainerBase>
